<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="兼职详情"
        android:gravity="center"
        android:background="@color/jianzhiHeaderBG"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/jianzhi_HeaderTitle"
        android:layout_alignParentTop="true" />

    <RadioButton
        android:layout_width="40dp"
        android:button="@null"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/prowork_back"
        android:layout_alignParentLeft="true"
        android:id="@+id/jianzhi_message_back" />

    <RadioButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:button="@null"
        android:layout_margin="5dp"
        android:id="@+id/jianzhi_message_share"
        android:background="@drawable/prowork_share"
        android:layout_alignBaseline="@+id/jianzhi_HeaderTitle"
        android:layout_alignBottom="@+id/jianzhi_HeaderTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
