<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/company_scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/jianzhi_mes_company_logo"
                android:background="@drawable/job1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/jianzhi_mes_company_logo"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/jianzhi_mes_company_name"
                    android:text="镇江江苏大学工作室"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兼米官方唯一认证"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:padding="1.5dp"
                    android:background="@drawable/shape_list_text"
                    android:layout_below="@+id/jianzhi_mes_company_name"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_background"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jianzhi_mes_text_zhonghe"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="综合评价"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jianzhi_mes_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_toRightOf="@+id/jianzhi_mes_text_zhonghe"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:rating="5"
                android:clickable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4分"
                android:id="@+id/jianzhi_mes_company_credit"
                android:layout_toRightOf="@+id/jianzhi_mes_ratingBar"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:clickable="false"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_background"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/jianzhi_mes_textlian"
                android:text="联系地址"
                 android:gravity="center"
                android:layout_marginLeft="15dp"
                android:clickable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/jianzhi_mes_company_location"
                android:gravity="center"
                android:layout_toRightOf="@+id/jianzhi_mes_textlian"
                android:text="镇江江苏大学18号"
                android:layout_marginLeft="15dp"
                android:clickable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/jianzhi_mes_company_xaingguan"
                android:text="相关简历"
                android:layout_below="@+id/jianzhi_mes_textlian"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jianzhi_mes_company_message"
                android:text="nihao"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/jianzhi_mes_company_xaingguan"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/jianzhi_mes_company_message"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_background"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="执照"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:padding="1.5dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shape_list_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="该企业已经通过营业执照验证"
                android:layout_marginLeft="55dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
