<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="@color/base_color">
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingRight="5.0dp"
            android:id="@+id/forget_back"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/main_forgetPhone"
        android:hint="请输入手机号"
        android:drawableLeft="@drawable/login_phone_left"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="numberPassword"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/main_forgetPass"
            android:hint="请输入新密码"
            android:drawableLeft="@drawable/login_password_left"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="numberPassword"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/main_forget_surePass"
            android:hint="请确认新密码"
            android:drawableLeft="@drawable/login_password_left"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/mes_code"
                android:id="@+id/main_forgetCode"
                android:layout_toLeftOf="@+id/forget_getcode"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/forget_getcode"
            android:text="获取验证码"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_list_text"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提  交"
        android:id="@+id/forget_put"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_list_text"/>

</LinearLayout>
