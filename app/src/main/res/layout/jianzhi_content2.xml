<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jianzhi_mes_salary"
        android:text="工资待遇 : 300/天"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jianzhi_mes_Renshu"
        android:textSize="15sp"
        android:text="string/zhaopinRenshu"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jianzhi_mes_gender"
        android:text="性别要求 : 不限"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:id="@+id/jianzhi_mes_WorkPlace"
        android:text="工作地点 : 校内"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:padding="5dp" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/jianzhi_mes_Position"
        android:background="@drawable/position"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"/>
</RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:text="工作时间 : 2016-04-03到2016-04-26 共有20天"
        android:layout_height="wrap_content"
        android:lines="1"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/jianzhi_mes_workDay"
        android:padding="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_background"
        android:id="@+id/view3" />
    <TextView
        android:layout_width="wrap_content"
        android:text="上班时间段 :  不限"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/jianzhi_mes_workTime" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/jianzhi_mes_OverTime"
        android:text="报名截止: 2016-05-12"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:padding="5dp"
        android:gravity="center"/>

</LinearLayout>
