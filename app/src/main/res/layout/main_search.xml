<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45.0dp"
    android:gravity="center_vertical"
    android:background="@color/base_color">
    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:paddingRight="5.0dp"
        android:id="@+id/search_back"
        android:background="@drawable/back"
        />
    <com.example.mytools.my_Edit
        android:textSize="15.0dip"
        android:layout_width="match_parent"
        android:layout_height="38.0dp"
        android:id="@+id/search_searchJianzhi"
        android:drawableLeft="@drawable/search_bar"
        android:drawableRight="@drawable/delete"
        android:layout_toRightOf="@id/search_back"
        android:layout_toLeftOf="@+id/search_searchButton"
        android:layout_centerVertical="true"
        android:hint="搜索兼职"
        android:background="@drawable/searchbg"/>
    <TextView
        android:layout_width="45.0dp"
        android:layout_height="45.0dp"
        android:textColor="@color/white"
        android:id="@+id/search_searchButton"
        android:text="搜索"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/search_buttonbg"/>

</RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_list"/>
</LinearLayout>
