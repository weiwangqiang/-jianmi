<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:notButton="http://schemas.android.com/apk/res-auto">
    <com.example.mytools.NotificationButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:button="@null"
        android:gravity="center"
        notButton:circleSize="12dp"
        notButton:textColor="@android:color/white"
        android:id="@+id/main_home1"
        android:drawableTop="@drawable/main_home"
        android:text="首页"
        android:layout_weight="1.0"
        android:checked="true"
        />
    <Button
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:text="12"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/main_home1"
        android:layout_alignTop="@+id/main_home1"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/red_circle"/>
</RelativeLayout>
