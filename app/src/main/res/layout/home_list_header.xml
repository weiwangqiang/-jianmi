<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_viewPager"
            >
        </android.support.v4.view.ViewPager>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#66000000"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_viewpager_text"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_Radio1"
                    android:background="@drawable/radiobutton_back"
                    android:checked="true"
                    android:button="@null"
                    android:clickable="false"
                    android:layout_marginRight="10dp"
                    style="@style/myShowButton"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radiobutton_back"
                    android:layout_marginRight="10dp"
                    android:button="@null"
                    android:clickable="false"
                    style="@style/myShowButton"
                    android:id="@+id/main_Radio2"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radiobutton_back"
                    android:button="@null"
                    android:clickable="false"
                    android:id="@+id/main_Radio3"
                    style="@style/myShowButton"
                    />
            </RadioGroup>
        </RelativeLayout>

    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/main_GridView"
        android:numColumns="4"
        android:listSelector="#00000000"
        android:background="#FFFFFF"
        android:stretchMode="columnWidth">
    </GridView>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/view_background"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/main_head_more"
        android:background="#FFFFFF">
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/base_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猜你喜欢"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#292929"
            android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/home_Header_more"
                android:text="更多"
                android:background="#FFFFFF"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/more"
                android:textColor="#292929"
                android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_background"/>
</LinearLayout>
</LinearLayout>
