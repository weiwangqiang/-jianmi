<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/main_xiaoxi_text"
        android:background="@color/base_color"
        android:text="消息(未登录)"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/main_xiaoxi_RelNews"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/xiaoxi_list_image"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/company_inform"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xiaoxi_list_TextTitle"
            android:text="最新消息"
            android:lines="1"
            android:textSize="15sp"
            android:layout_toRightOf="@id/xiaoxi_list_image"
            android:layout_toLeftOf="@+id/main_list_TextMoney"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xiaoxi_list_text"
            android:layout_toRightOf="@id/xiaoxi_list_image"
            android:layout_alignBottom="@+id/main_list_TextOver"
            android:layout_below="@+id/xiaoxi_list_TextTitle"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:text="@string/mainxiaoxi_content"/>

    </RelativeLayout>

   <GridView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:numColumns="3"
       android:listSelector="#00000000"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:id="@+id/main_xiaoxi_gridView"/>
</LinearLayout>
